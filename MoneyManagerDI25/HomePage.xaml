<Page x:Class="MoneyManagerX.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManagerX"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="HomePage">
    <Grid>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ComboBox  Width="500"
                   FontSize="36px"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Background="{StaticResource SecondaryColor}"
                   Foreground="{StaticResource TextColor}"
                   Grid.ColumnSpan="2"
                   x:Name="AccountsComboBox"
                   SelectionChanged="AccountsComboBox_SelectionChanged"/>
        <TextBlock Text="0,0 рублей"
                   Grid.Column="1" 
                   Foreground="{StaticResource SecondaryColor}"
                   FontSize="40px"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   x:Name="BalanceText"/>
            <ListBox Grid.Row="1" 
                     Name="IncomesListBox"
                     FontSize="24px"                     
                     Foreground="{StaticResource ElementsColor}"
                     Background="{StaticResource SecondaryColor}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Category}" />
                            <TextBlock Text="{Binding Description}" />
                            <TextBlock Text="{Binding Amount, StringFormat={}{0:C}}" />
                            <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox Grid.Row="1"
                     Grid.Column="1"
                     Name="SpendingsListBox"
                     FontSize="24px"
                     Foreground="{StaticResource ElementsColor}"
                     Background="{StaticResource SecondaryColor}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Category}" />
                            <TextBlock Text="{Binding Description}" />
                            <TextBlock Text="{Binding Amount, StringFormat={}{0:C}}" />
                            <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Content="Создать счёт"
                    Width="300px"
                    Height="60px"
                    Background="{StaticResource SecondaryColor}"
                    Foreground="{StaticResource TextColor}"
                    FontSize="24px"
                    FontWeight="Bold" 
                    Margin="30px 0 0 0"
                    Cursor="Hand"
                    Click="CreateAccount"
                    />
                <Button Content="Добавить транзакцию"
                    Width="300px"
                    Height="60px"
                    Background="{StaticResource ElementsColor}"
                    Foreground="{StaticResource PrimaryColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Margin="30px 0 0 0"
                    Cursor="Hand"
                    Click="AddTransaction"
                    />
                <Button Content="Добавить категорию"
                    Width="300px"
                    Height="60px"
                    Background="{StaticResource ElementsColor}"
                    Foreground="{StaticResource PrimaryColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Margin="30px 0 0 0"
                    Cursor="Hand"
                    Click="AddCategory"
                    />
                <Button Content="Обновить"
                    Width="300px"
                    Height="60px"
                    Background="{StaticResource SecondaryColor}"
                    Foreground="{StaticResource TextColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Margin="30px 0 0 0"
                    Cursor="Hand"
                    Click="RefreshPage"
                    />
            </StackPanel>
    </Grid>
    </Grid>
</Page>
