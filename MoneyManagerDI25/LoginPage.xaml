<Page x:Class="MoneyManagerX.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManagerX"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Авторизация"
                       HorizontalAlignment="Center"
                       FontSize="24px"
                       Foreground="{StaticResource TextColor}"
                       />
            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="LoginTextBox" />
            <PasswordBox Style="{StaticResource TextBoxStyle}" x:Name="PasswordTextBox"/>
            <Button Style="{StaticResource ButtonStyle}"
                    Content="Войти"
                    Click="Login_Button_Click"/>
            <TextBlock Text="Зарегистроваться"
                       Foreground="{StaticResource TextColor}" 
                       HorizontalAlignment="Center" 
                       Margin="0 10px 0 0"
                       Cursor="Hand" MouseDown="RegistrateTextLink"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
