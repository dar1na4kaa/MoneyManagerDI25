<Page x:Class="MoneyManagerX.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManagerX"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="SettingsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Основной счет"
                   FontSize="36px"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource TextColor}"
                   Grid.ColumnSpan="2"/>
        <TextBlock Text="0,0 рублей"
                   Grid.Column="1" 
                   Foreground="{StaticResource SecondaryColor}"
                   FontSize="40px"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"/>
        <TextBlock Text="Доходы"
                   Grid.Row="1"
                        Grid.Column="1"
                   Foreground="{StaticResource TextColor}"
                   HorizontalAlignment="Center"
                   FontSize="24px"
                   />
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Content="Создать счёт"
                    Width="300px"
                    Height="60px"
                    Background="{StaticResource SecondaryColor}"
                    Foreground="{StaticResource TextColor}"
                    FontSize="24px"
                    FontWeight="Bold" 
                    Margin="30px 0 0 0"
                    Cursor="Hand"/>
            <Button Content="Добавить доход"
                    Width="300px"
                    Height="60px"
                    Background="{StaticResource ElementsColor}"
                    Foreground="{StaticResource PrimaryColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Margin="30px 0 0 0"
                    Cursor="Hand"/>
            <Button Content="Добавить расход"
                    Width="300px"
                    Height="60px"
                    Background="{StaticResource TextColor}"
                    Foreground="{StaticResource ElementsColor}"
                    FontSize="24px"
                    FontWeight="Bold"
                    Margin="30px 0 0 0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
